@page
@model RSPGApplication.Pages.RSPGFormRelated.RSPGSummaryFinalReportModel
@{
    ViewData["Title"] = "RSPG Summary - Final Report";
}

<style>
    body {
        background-color: #f3eff6;
    }
</style>


<div class="rspg-summary">
    <div class="container mt-5">
        <h2 class="mb-4">RSPG Summary - Final Report</h2>
        <p class="mb-4">Recipients of Hemingway Vitality Grants, Research and Professional Grants, Innovative Teaching Grants, Hemingway Faculty Excellence or Collaborative, and Hemingway New Faculty must complete this summary report upon completion of the project.</p>

        <form method="post" id="form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Report.Email"></label>
                <input asp-for="Report.Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Report.Email" class="text-danger"></span>
            </div>

            <!-- Project Director -->
            <div class="mb-3">
                <label asp-for="Report.ProjectDirector"></label>
                <input asp-for="Report.ProjectDirector" class="form-control" placeholder="Project Director Name" />
                <span asp-validation-for="Report.ProjectDirector" class="text-danger"></span>
            </div>

            <!-- Project Title -->
            <div class="mb-3">
                <label asp-for="Report.ProjectTitle"></label>
                <select asp-for="Report.ProjectTitle" asp-items="Model.ProjectTitles" class="form-control">
                    <option value="">Select a Project</option>
                </select>
                <span asp-validation-for="Report.ProjectTitle" class="text-danger"></span>
            </div>

            <!-- Other Participants (Optional) -->
            <div class="mb-3">
                <label asp-for="Report.OtherParticipants"></label>
                <input asp-for="Report.OtherParticipants" class="form-control" />
                <span asp-validation-for="Report.OtherParticipants" class="text-danger"></span>
            </div>

            <!-- Award Date -->
            <div class="mb-3">
                <label asp-for="Report.AwardDate"></label>
                <input asp-for="Report.AwardDate" type="date" class="form-control" />
                <span asp-validation-for="Report.AwardDate" class="text-danger"></span>
            </div>

            <!-- Completion Date -->
            <div class="mb-3">
                <label asp-for="Report.CompletionDate"></label>
                <input asp-for="Report.CompletionDate" type="date" class="form-control" />
                <span asp-validation-for="Report.CompletionDate" class="text-danger"></span>
            </div>

            <!-- Amount of RSPG Award -->
            <div class="mb-3">
                <label asp-for="Report.AwardAmount"></label>
                <input asp-for="Report.AwardAmount" type="number" step="0.01" class="form-control" min="0" />
                <span asp-validation-for="Report.AwardAmount" class="text-danger"></span>
            </div>

            <!-- Amount of RSPG Award Spent -->
            <div class="mb-3">
                <label asp-for="Report.AmountSpent"></label>
                <input asp-for="Report.AmountSpent" type="number" step="0.01" class="form-control" min="0" />
                <span asp-validation-for="Report.AmountSpent" class="text-danger"></span>
            </div>

            <!-- Type of Proposal -->
            <div class="mb-3">
                <label asp-for="Report.ProposalType"></label>
                <select asp-for="Report.ProposalType" asp-items="@(new SelectList(Model.ProposalTypes))" class="form-control">
                    <option value="">Select Proposal Type</option>
                </select>
                <span asp-validation-for="Report.ProposalType" class="text-danger"></span>
            </div>

            <!-- Purpose of Project (Optional) -->
            <div class="mb-3">
                <label asp-for="Report.PurposeOfProject"></label>
                <textarea asp-for="Report.PurposeOfProject" class="form-control"></textarea>
            </div>

            <!-- Project Outcomes (Optional) -->
            <div class="mb-3">
                <label asp-for="Report.ProjectOutcomes"></label>
                <textarea asp-for="Report.ProjectOutcomes" class="form-control"></textarea>
            </div>

            <!-- Evaluation and Dissemination Outcomes (Optional) -->
            <div class="mb-3">
                <label asp-for="Report.EvaluationDissemination"></label>
                <textarea asp-for="Report.EvaluationDissemination" class="form-control"></textarea>
            </div>

            <!-- File Uploads -->
            <div class="mb-3">
                <label class="form-label">Upload Appendices (PDF only)</label>
                <input type="file" name="AppendicesFile" class="form-control" accept="application/pdf" multiple />
            </div>

            <button type="submit" class="btn btn-primary">Save Report</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}