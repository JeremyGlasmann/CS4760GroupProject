@page
@model RSPGApplication.Pages.UserRelated.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>RSPG Login</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            @Model.message
            <div class="form-group">
                <label for="email">Email: </label>
            </div>
            <div>
                <input type="text" name="email" value="" asp-for="@Model.email" />
            </div>
            <div class="form-group">
                <label for="password">Password: </label>
            </div>
            <div>
                <input type="password" name="password" value="" asp-for="@Model.password" />
            </div>
            <div class="form-group">
                <label>&nbsp;</label>
                <input type="submit" value="Submit" class="submit" />
            </div>
            <div>
                <a href="/UserRelated/register">Not registered click here</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}